<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="123"
        android:key="password"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_password_summary"
        android:title="@string/pref_password_title" />
    <EditTextPreference
        android:defaultValue="@string/the_default_trigger"
        android:key="trigger"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_trigger_summary"
        android:title="@string/pref_trigger_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="debug"
        android:summary="@string/pref_debug_summary"
        android:title="@string/pref_debug_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="longToast"
        android:summary="@string/pref_longer_toast_summary"
        android:title="@string/pref_longer_toast_title" />
</PreferenceScreen>