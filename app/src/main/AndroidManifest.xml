<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.baijifeilong.antea">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StatusActivity"
            android:label="@string/activity_status" />

        <activity
            android:name=".HelpActivity"
            android:label="@string/activity_help" />

        <activity
            android:name=".PasswordEditActivity"
            android:label="@string/activity_password_edit"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />

        <activity
            android:name=".MessageActivity"
            android:label="@string/activity_message" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_settings" />

        <activity
            android:name=".TestActivity"
            android:label="@string/activity_test" />
        <activity android:name=".PasswordGeneratorActivity" />

        <service
            android:name=".AnteaService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/access_config" />
        </service>
    </application>

</manifest>